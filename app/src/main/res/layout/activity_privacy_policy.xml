<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tabsaver.PrivacyPolicy">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Privacy Policy"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TabSaver, LLC (&quot;us&quot;, &quot;we&quot;, or &quot;our&quot;) operates tabsaver.info (the &quot;Site&quot;) and the TabSaver mobile device application (the &quot;App&quot;) available through the App Store and Google Play. This brief informs you of our policies regarding the collection and use of Personal information we receive from the users of the Site and App."
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Personal Information Collection and Use"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="We use your Personal Information for improving the Site or App and for providing an enhanced user experience when navigating the Site or App. By using the Site or App, you agree to the collection and use of information in accordance with this policy.  While using our Site or App, the only Personal Information we may recommend you provide us is your current location."
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log Data"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Like many site operators, we collect information (&quot;Log Data&quot;) whenever you visit our Site or App. This Log Data provides analytics on usage. It may include the browser or application type used, the pages on the Site or App visited, the time spent on the visited pages, the date of the visit, and the city in which you are located."
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cookies"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Unlike many sites, we do not use &quot;cookies&quot; to collect information about user experience. Disabling &quot;cookies&quot; will not interfere with the proper functioning of the Site or App."
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Security"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="The security of the Personal Information you provide is important to us, and we use commercially acceptable means to protect your Personal Information. When using our Site or App, there is no security risk.  This Site or App does contain access to other websites. Please be aware that we are not responsible for the content or privacy practices of such other sites. We encourage our users to be aware when they leave our Site or App and to read the privacy statements of any other site that collects personally identifiable information."
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Changes to the Privacy Policy"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TabSaver, LLC may update this Privacy Policy. You will have access to any changes by our posting of the new Privacy Policy on the Site or App. You are advised to review the Privacy Policy periodically for any changes."
            android:id="@+id/textView13"
            android:layout_below="@+id/textView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last updated: September 10, 2015."
            android:id="@+id/textView14"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />


    </RelativeLayout>
</ScrollView>
