<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tabsaver.ContactActivity"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email"
            android:id="@+id/general_settings_header"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:id="@+id/view2"
            android:checked="false"
            android:layout_below="@+id/general_settings_header"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/contact_email"
            android:autoText="false"
            android:layout_below="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Message"
            android:id="@+id/messageHeader"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:paddingTop="20dp"
            android:layout_below="@+id/contact_email"
            android:checked="false" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:id="@+id/view3"
            android:checked="false"
            android:layout_below="@+id/messageHeader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="125dp"
            android:inputType="textAutoCorrect|textMultiLine"
            android:ems="10"
            android:id="@+id/contact_message"
            android:gravity="top"
            android:singleLine="false"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/contact_email"
            android:layout_alignLeft="@+id/contact_email"
            android:layout_alignStart="@+id/contact_email"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:nestedScrollingEnabled="false"
            android:focusable="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:id="@+id/contact_send"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/contact_message"
            android:layout_centerHorizontal="true"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>
