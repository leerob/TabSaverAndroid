<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tabsaver.ContactActivity"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email"
            android:id="@+id/contact_email_label"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/contact_message_label"
            android:layout_alignEnd="@+id/contact_message_label" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/contact_email"
            android:autoText="false"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Message"
            android:id="@+id/contact_message_label"
            android:layout_alignTop="@+id/contact_message"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/contact_message"
            android:singleLine="false"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/contact_email"
            android:layout_alignLeft="@+id/contact_email"
            android:layout_alignStart="@+id/contact_email"
            android:layout_alignRight="@+id/contact_email"
            android:layout_alignEnd="@+id/contact_email" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/contact_send"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/contact_message"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
