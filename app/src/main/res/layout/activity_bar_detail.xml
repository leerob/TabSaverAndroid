<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView2"
    android:nestedScrollingEnabled="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.tabsaver._Screens.Active.BarDetail"
        android:weightSum="1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/imageView"
            android:src="@drawable/bar"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_weight="0.01" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <View
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="@drawable/blue"
                android:id="@+id/bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Bar Name Here"
                android:id="@+id/barName"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="@drawable/white" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_gravity="left"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="115dp"
                android:layout_marginStart="115dp"
                android:backgroundTint="#ffffffff" />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingRight="5dp"
                android:id="@+id/navIcon"
                android:src="@drawable/ic_nav_icon"
                android:tint="@drawable/blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="123 Welch Ave, Cedar Falls, IA"
                android:id="@+id/barAddress"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#c0c0c0"
            android:id="@+id/line_break_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingRight="5dp"
                android:id="@+id/phoneIcon"
                android:src="@drawable/ic_phone_icon"
                android:tint="@drawable/blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="(555) 555 - 5555"
                android:id="@+id/barPhone"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#c0c0c0"
            android:id="@+id/line_break_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/websiteIcon"
                android:paddingRight="5dp"
                android:src="@drawable/ic_mouse_icon"
                android:tint="@drawable/blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Website"
                android:id="@+id/barWebsite"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#c0c0c0"
            android:id="@+id/viewbd1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/hoursIcon"
                android:paddingRight="5dp"
                android:src="@drawable/ic_clock"
                android:tint="@drawable/blue"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="5PM-2AM"
                android:id="@+id/barHours"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#c0c0c0"
            android:id="@+id/view4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/yelpIcon"
                android:src="@drawable/ic_yelp"
                android:tint="@drawable/blue"
                android:paddingLeft="4dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Yelp"
                android:id="@+id/yelp"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#c0c0c0"
            android:id="@+id/disfuckingview"
            android:focusableInTouchMode="true"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_foursquare"
                android:tint="@drawable/blue"
                android:paddingLeft="4dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="FourSquare"
                android:id="@+id/foursquare"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#c0c0c0"
            android:id="@+id/view3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView2"
                android:paddingRight="5dp"
                android:src="@drawable/ic_error"
                android:tint="@drawable/blue"
                android:paddingLeft="7dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="@string/dealsOutdatedString"
                android:id="@+id/dealsOutdated"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/listView"
            android:layout_gravity="left"
            android:focusable="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:nestedScrollingEnabled="false"
            android:fastScrollAlwaysVisible="false"
            android:fastScrollEnabled="true"
            android:focusableInTouchMode="false"
            android:smoothScrollbar="false" />



    </LinearLayout>

</ScrollView>