
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView2" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.tabsaver.BarDetail">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Paddy&apos;s Irish Pub"
            android:id="@+id/barName"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            android:src="@drawable/bar"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:cropToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Website"
            android:id="@+id/barWebsite"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/barName"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="(555) 555 - 5555"
            android:id="@+id/barPhone"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/barWebsite"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="123 Welch Ave\ntefes"
            android:id="@+id/barAddress"
            android:layout_below="@+id/barName"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:lines="2"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/barAddress"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:id="@+id/listView"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/spinner"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Yelp or other rating?"
            android:id="@+id/barYelpDisplay"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/listView"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>