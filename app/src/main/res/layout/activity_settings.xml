<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tabsaver._Screens.Inactive.OldSettingsActivity"
    android:fillViewport="false"
    android:id="@+id/settings_page">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="General"
            android:id="@+id/general_settings_header"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:id="@+id/line_break_1"
            android:checked="false"
            android:layout_below="@+id/general_settings_header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Location:"
                android:id="@+id/locationLabel"
                android:layout_below="@+id/line_break_1"
                android:paddingRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:textSize="20sp" />

            <AutoCompleteTextView
                android:id="@+id/city_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_toRightOf="@+id/locationLabel"
                android:layout_toEndOf="@+id/locationLabel"
                android:paddingTop="15dp"
                android:layout_below="@+id/line_break_1"
                android:maxLines="1"
                android:hint="Start typing a city"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Show Closed Bars:"
                android:id="@+id/textView"
                android:layout_below="@+id/line_break_1"
                android:paddingRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:textSize="20sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showClosedBars"
                android:layout_marginTop="15dp"
                android:checked="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Show Bars With No Deals:"
                android:id="@+id/textView15"
                android:layout_below="@+id/line_break_1"
                android:paddingRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:textSize="20sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showBarsNoDeals"
                android:layout_marginTop="15dp"
                android:checked="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Other"
            android:id="@+id/other_settings_header"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/deprecated_location" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:id="@+id/line_break_2"
            android:layout_below="@+id/client_login"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact Us"
            android:id="@+id/contact_us"
            android:paddingTop="10dp"
            android:layout_below="@+id/view3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Client Login"
            android:id="@+id/client_login"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/view1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone" />

        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Register Bar"
            android:id="@+id/register"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0 mi"
            android:id="@+id/currentDistanceDisplay"
            android:layout_below="@+id/city_autocomplete"
            android:layout_alignLeft="@+id/city_autocomplete"
            android:layout_alignStart="@+id/city_autocomplete"
            android:layout_marginLeft="110dp"
            android:layout_marginStart="110dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Privacy Policy"
                android:id="@+id/pp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal">

            </TextView>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Terms of Service"
                android:layout_below="@+id/pp"
                android:id="@+id/tos"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_horizontal">

            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>


</ScrollView>
